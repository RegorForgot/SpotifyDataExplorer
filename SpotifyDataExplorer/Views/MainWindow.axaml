<Window
  Height="600"
  Title="SpotifyDataExplorer"
  Width="1000"
  mc:Ignorable="d"
  x:Class="SpotifyDataExplorer.Views.MainWindow"
  x:DataType="vm:MainWindowViewModel"
  xmlns="https://github.com/avaloniaui"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:pageVM="clr-namespace:SpotifyDataExplorer.ViewModels.Pages"
  xmlns:pages="clr-namespace:SpotifyDataExplorer.Views.Pages"
  xmlns:vm="using:SpotifyDataExplorer.ViewModels"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <ContentControl Content="{Binding UIContext.CurrentViewModel}">
    <ContentControl.DataTemplates>
      <DataTemplate DataType="{x:Type pageVM:StartPageViewModel}">
        <pages:StartView DataContext="{Binding}" />
      </DataTemplate>
      <DataTemplate DataType="{x:Type pageVM:HistoryPageViewModel}">
        <pages:HistoryPageView DataContext="{Binding}" />
      </DataTemplate>
      <DataTemplate DataType="{x:Type pageVM:TrackPageViewModel}">
        <pages:TrackPageView DataContext="{Binding}" />
      </DataTemplate>
      <DataTemplate DataType="{x:Type pageVM:AlbumPageViewModel}">
        <pages:AlbumPageView DataContext="{Binding}" />
      </DataTemplate>
    </ContentControl.DataTemplates>
  </ContentControl>

</Window>