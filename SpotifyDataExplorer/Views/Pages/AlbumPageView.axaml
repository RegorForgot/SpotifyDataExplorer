<UserControl
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d"
  x:Class="SpotifyDataExplorer.Views.Pages.AlbumPageView"
  x:DataType="pages:AlbumPageViewModel"
  xmlns="https://github.com/avaloniaui"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:pages="clr-namespace:SpotifyDataExplorer.ViewModels.Pages"
  xmlns:panels="clr-namespace:SpotifyDataExplorer.Views.Panels"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.DataContext>
    <pages:AlbumPageViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto, Auto, *">
    <Button
      Command="{Binding LastScreenCmd}"
      Content="Page Back"
      Grid.Row="0"
      Height="50"
      HorizontalAlignment="Left"
      IsEnabled="{Binding Context.CanGoBack}"
      VerticalAlignment="Center"
      VerticalContentAlignment="Center" />
    <Label
      Content="{Binding AlbumName}"
      FontSize="24"
      FontWeight="Bold"
      Grid.Row="1" />
    <panels:AlbumView DataContext="{Binding AlbumViewModel}" Grid.Row="2" />
  </Grid>
</UserControl>