<UserControl
  x:Class="SpotifyDataExplorer.Views.Pages.StartView"
  x:DataType="viewModels:StartPageViewModel"
  xmlns="https://github.com/avaloniaui"
  xmlns:pages="clr-namespace:SpotifyDataExplorer.ViewModels.Pages"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:viewModels="clr-namespace:SpotifyDataExplorer.ViewModels">

  <Design.DataContext>
    <viewModels:StartPageViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="*, Auto">
    <Button
      Command="{Binding GetJsonFilesCmd}"
      CommandParameter="{Binding $parent[UserControl]}"
      Content="Import from JSON files"
      Name="JsonImport" />
    <ProgressBar
      Grid.Row="1"
      HorizontalAlignment="Center"
      IsIndeterminate="True"
      IsVisible="{Binding Loading}"
      Margin="5" />
  </Grid>

</UserControl>